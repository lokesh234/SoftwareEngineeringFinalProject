<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.c20.teamU.Administration.EdgeViewScreenController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <HBox prefHeight="80.0" style="-fx-background-color: #416785;" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                     <children>
                        <Label text="View Edges" textFill="WHITE">
                           <font>
                              <Font name="Segoe UI Bold" size="24.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </top>
         <left>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" style="-fx-background-color: #729EBF;" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="addButton" mnemonicParsing="false" text="Add" VBox.vgrow="ALWAYS" onAction="#addScreen">
                     <font>
                        <Font name="Segoe UI" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="editButton" mnemonicParsing="false" text="Edit" VBox.vgrow="ALWAYS" onAction="#editScreen">
                     <font>
                        <Font name="Segoe UI" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="removeButton" mnemonicParsing="false" style="-fx-background-color: #db6e6e;" text="Remove" VBox.vgrow="ALWAYS" onAction="#remove">
                     <font>
                        <Font name="Segoe UI" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="backButton" mnemonicParsing="false" text="Back" VBox.vgrow="ALWAYS" onAction="#backToAdmin">
                     <font>
                        <Font name="Segoe UI" size="18.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </left>
         <center>
            <TableView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" fx:id="edges" onMouseClicked="#detectClick">
              <columns>
                <TableColumn fx:id="edgeIdColumn" prefWidth="180.0" text="Edge ID" />
                <TableColumn fx:id="startNodeColumn" prefWidth="130" text="Start Node" />
                  <TableColumn fx:id="endNodeColumn" prefWidth="130" text="End Node" />
              </columns>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
