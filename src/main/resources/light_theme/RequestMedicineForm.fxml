                        <Label text="Medicine Request Form" textFill="WHITE">
                           <font>
                              <Font name="Segoe UI Bold" size="20.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="32.0" prefWidth="600.0">
                     <children>
                        <JFXButton fx:id="closeMedicineScreen" onAction="#closeMedicineForm" style="-fx-background-color: #474338;" text="Back" textFill="WHITE" />
