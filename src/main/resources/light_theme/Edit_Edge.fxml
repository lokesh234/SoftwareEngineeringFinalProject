<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.c20.teamU.Administration.EdgeEditController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <HBox prefHeight="80.0" style="-fx-background-color: #416785;" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Add or Edit Edge" textFill="WHITE">
                           <font>
                              <Font name="Segoe UI Bold" size="24.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
         </top>
         <center>
            <TableView BorderPane.alignment="CENTER" fx:id="table" onMouseClicked="#detectClick">
              <columns>
                <TableColumn prefWidth="75.0" text="X" fx:id="xColumn" />
                <TableColumn fx:id="yColumn" prefWidth="75.0" text="Y" />
                  <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                  <TableColumn fx:id="floorColumn" prefWidth="75.0" text="Floor" />
                  <TableColumn fx:id="buildingColumn" prefWidth="75.0" text="Building" />
                  <TableColumn fx:id="nodeTypeColumn" prefWidth="75.0" text="Node Type" />
                  <TableColumn fx:id="longNameColumn" prefWidth="274.33331298828125" text="Long Name" />
                  <TableColumn fx:id="shortNameColumn" prefWidth="74.66668701171875" text="Short Name" />
              </columns>
            </TableView>
         </center>
         <bottom>
            <VBox alignment="CENTER" prefHeight="100.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Button mnemonicParsing="false" text="Start Node" fx:id="startNode" onAction="#selectStart">
                           <font>
                              <Font name="Segoe UI" size="14.0" />
                           </font>
                        </Button>
                        <Label text="Text Goes Here..." fx:id="startLabel">
                           <font>
                              <Font name="Segoe UI" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Button mnemonicParsing="false" text="End Node" fx:id="endNode" onAction="#selectEnd">
                           <font>
                              <Font name="Segoe UI" size="14.0" />
                           </font>
                        </Button>
                        <Label text="Text Goes Here..." fx:id="endLabel">
                           <font>
                              <Font name="Segoe UI" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Button fx:id="saveButton" mnemonicParsing="false" text="Save" onAction="#save">
                           <font>
                              <Font name="Segoe UI" size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" onAction="#back">
                           <font>
                              <Font name="Segoe UI" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" spacing="10" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="ID goes here..." fx:id="idLabel">
                           <font>
                              <Font name="Segoe UI" size="14"/>
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </VBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
