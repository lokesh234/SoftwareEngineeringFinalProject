<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.c20.teamU.Administration.ChoosePathController">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #FFEEC9;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_RIGHT" VBox.vgrow="ALWAYS">
                    <children>
                  <JFXButton onAction="#closePop" style="-fx-background-color: #f74f4f;" text="X" textFill="WHITE" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Segoe UI Bold" size="18.0" />
                     </font>
                  </JFXButton>
                    </children>
                    <padding>
                        <Insets right="18.0" top="7.0" />
                    </padding>
                </HBox>
            <VBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Choose Pathfinding Algorithm" VBox.vgrow="ALWAYS">
                     <font>
                        <Font name="Segoe UI Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
                <VBox prefHeight="280.0" prefWidth="600.0" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <JFXRadioButton text="A*" VBox.vgrow="ALWAYS" fx:id="sta">
                     <font>
                        <Font name="Segoe UI Bold" size="18.0" />
                     </font>
                  </JFXRadioButton>
                  <JFXRadioButton text="Breadth-first" fx:id="bfs">
                     <font>
                        <Font name="Segoe UI Bold" size="18.0" />
                     </font>
                  </JFXRadioButton>
                  <JFXRadioButton text="Depth-first" fx:id="dfs">
                     <font>
                        <Font name="Segoe UI Bold" size="18.0" />
                     </font>
                  </JFXRadioButton>
<!--                  <JFXRadioButton text="Dijkstra's">-->
<!--                     <font>-->
<!--                        <Font name="Segoe UI Bold" size="18.0" />-->
<!--                     </font>-->
<!--                  </JFXRadioButton>-->
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
                </VBox>
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <JFXButton style="-fx-background-color: #474338;" text="Done" textFill="WHITE" fx:id="done" onAction="#set">
                     <font>
                        <Font name="Segoe UI Bold" size="18.0" />
                     </font>
                  </JFXButton>
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
