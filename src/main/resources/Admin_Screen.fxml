<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.c20.teamU.AdminController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #416785;">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="View and Edit Nodes" textFill="WHITE">
                           <font>
                              <Font name="Segoe UI Bold" size="24.0" />
                           </font></Label>
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Button mnemonicParsing="false" text="Logout">
                           <font>
                              <Font name="Segoe UI" size="14.0" />
                           </font></Button>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox alignment="CENTER" maxWidth="150.0" spacing="10.0" style="-fx-background-color: #729EBF;" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox prefHeight="20.0" spacing="10.0">
                           <children>
                              <Label text="Browse for file" textFill="WHITE">
                                 <font>
                                    <Font name="Segoe UI" size="14.0" />
                                 </font></Label>
                              <Button mnemonicParsing="false" text="...">
                                 <font>
                                    <Font name="Segoe UI" size="14.0" />
                                 </font></Button>
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="20.0" spacing="10.0">
                           <children>
<!--                              <Button fx:id="upload" defaultButton="true" mnemonicParsing="false" onAction="#exportScreen" text="Upload" />-->
                              <Button fx:id="edit" defaultButton="true" mnemonicParsing="false" onAction="#editPowers" text="Edit">
                                 <font>
                                    <Font name="Segoe UI" size="14.0" />
                                 </font></Button>
                             <Button fx:id="export" defaultButton="true" mnemonicParsing="false" onAction="#export" text="Export">
                                 <font>
                                    <Font name="Segoe UI" size="14.0" />
                                 </font></Button>
                           </children>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
<!--                             <Button fx:id="upload" defaultButton="true" mnemonicParsing="false" onAction="#exportScreen" text="Export"/>-->
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </VBox>
                  <TableView fx:id="nodeTable" onMouseClicked="#detectClick" HBox.hgrow="ALWAYS">
                    <columns>
                       <TableColumn fx:id="NodeID" prefWidth="75.0" text="NodeID" />
                       <TableColumn prefWidth="75.0" text="X-coord" fx:id="xCoord" />
                       <TableColumn fx:id="yCoord" prefWidth="75.0" text="Y-coord" />
                       <TableColumn fx:id="floor" prefWidth="75.0" text="floor" />
                       <TableColumn fx:id="building" prefWidth="75.0" text="building" />
                       <TableColumn fx:id="nodeType" prefWidth="75.0" text="NodeType" />
                       <TableColumn fx:id="longName" prefWidth="123.0" text="LongName" />
                       <TableColumn fx:id="shortName" prefWidth="76.0" text="ShortName" />
                    </columns>
                  </TableView>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
